---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="top-header container">
				<img src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png" alt="logo mercadolibre">
				<div class="buscador">
					<input type="text" placeholder="Encuentra lo que quieras acÃ¡">
					<button type="submit">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
						  </svg>
						  
					</button>
				</div>
				
				<p>publicidad</p>
			</div>
		
		</header>

		<div class="banner">

		</div>

		<div class="cards container">

			<div class="card">
				1
			</div>

			<div class="card">
				2
			</div>

			<div class="card">
				3
			</div>

			<div class="card">
				4
			</div>

			<div class="card">
				5
			</div>

			<div class="card">
				6
			</div>

		</div>
		<!-- <slot /> -->
	</body>
</html>
<style>
	html, body{
		margin: 0;
		padding: 0;
		background-color: rgb(219, 219, 219) ;
	}

	header{
		height: 80px;
		background-color: rgb(255, 241, 43);
		padding-top: 12px;
	}

	header img{
		width: 120px;
	}

	header input{
		box-sizing: border-box;
		display: inline-block;
		width: 80%;
		height: 32px;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		border: 1px solid #ffffff;
		outline: none;
	}

	header button{
		display: inline-block;
		width: 32px;
		height: 32px;
		border: none;
		background-color: #ffffff;

	}

	.buscador{
		display: flex;
		align-items: center;
		padding: 10px 8px;
	}

	.banner{
		height: 280px;
		background-color: red;
		background: linear-gradient(to bottom, rgb(255, 241, 43) 70%, rgb(219, 219, 219) ) ;
	}

	.container{
		max-width: 1200px;
		margin: 0 auto;
	}

	.cards{
		display: flex;
		justify-content: center;
		gap: 20px;
		margin-top: -80px;
		height: 180px;
	}

	.card{
		flex-grow: 1;
		background-color: #ffffff;
		border-radius: 6px;
	}

	.top-header{
		column-count: 3;
	}

</style>
